{
  "name": "pliim",
  "version": "1.2.0",
  "description": "One click to hide desktop icons, turn off notifications and hide active apps",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "webpack --progress --colors --watch",
    "pack": "webpack && build --dir",
    "dist": "webpack && build",
    "postinstall": "electron-builder install-app-deps",
    "package-mac": "webpack && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=./app/img/icon.icns --prune=true --out=release-builds"
  },
  "repository": "https://github.com/zehfernandes/pliim",
  "keywords": [
    "Electron",
    "presentation",
    "notifications",
    "hide"
  ],
  "author": "Zeh Fernandes",
  "build": {
    "productName": "Pliim",
    "asar": false,
    "files": [
      "**/*",
      "!media${/*}"
    ],
    "appId": "com.zehfernandes.pliim",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip",
        "mas"
      ],
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "electron": "^1.4.1",
    "electron-builder": "^19.8.0",
    "electron-packager": "^8.7.2"
  },
  "dependencies": {
    "auto-launch": "^5.0.3",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "decko": "^1.2.0",
    "electron-fetch": "^1.1.0",
    "menubar": "^5.2.3",
    "node-osascript": "^2.0.0",
    "preact": "^7.2.0",
    "preact-compat": "^3.13.1",
    "webpack": "^2.2.1"
  }
}